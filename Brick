            t1.goto(x4+25,y-75)
            drawD4 = t1.dot(width//6)
            t1.goto(x4+75,y-25)
            drawD4 = t1.dot(width//6)
            t1.goto(x4+75,y-75)
            drawD4 = t1.dot(width//6)
        elif diceValue == 5:
            t1.goto(x5+25,y-25)
