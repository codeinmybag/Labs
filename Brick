            drawD6 = t1.dot(width//6)
            t1.goto(x6+25,y-50)
            drawD6 = t1.dot(width//6)
            t1.goto(x6+75,y-50)
            drawD6 = t1.dot(width//6)
            t1.goto(x6+25,y-75)
            drawD6 = t1.dot(width//6)
            t1.goto(x6+75,y-75)
            drawD6 = t1.dot(width//6)
  #Roll 1  
    diceValue=random.randint(1,6)
    d2=diceValue
   
    t1.up()
    
    for i in range(2):
        t1.goto(x7,y2)
        print (x7,y2)
        t1.down()
        t1.fillcolor("white")
        t1.begin_fill()
        for i in range(4):
            t1.forward(sideLength/sides)
            t1.right(360/sides)
            x7 = x7+.5*width
        t1.end_fill()
        t1.up() 
    t1.up()
    t1.end_fill()
    x7=0
    if diceValue == 1:
        t1.goto(x7+50,y2-50)
        drawD1 = t1.dot(width//6)
    elif diceValue == 2:
        t1.goto(x7+25,y2-25)
        drawD2 = t1.dot(width//6)
        t1.goto(x7+75,y2-75)
        drawD2 = t1.dot(width//6)
    elif diceValue == 3:
        t1.goto(x7+25,y2-25)
        drawD3 = t1.dot(width//6)
        t1.goto(x7+50,y2-50)
        drawD3 = t1.dot(width//6)
        t1.goto(x7+75,y2-75)
